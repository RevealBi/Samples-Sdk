<Window x:Class="ThemingDashboards.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:rv="http://revealbi.io/" 
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="_themes" Margin="5" DisplayMemberPath="Name" SelectedIndex="0" SelectionChanged="Themes_SelectionChanged" />        
        <rv:RevealView x:Name="_revealView" Grid.Column="1"/>
    </Grid>
</Window>
